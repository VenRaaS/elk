PUT http://$HOSTNAME:9200/_template/template_cap/

{  
    "template":"*_cap",
    "mappings":{  
        "_default_":{  
            "_all":{  
                "enabled":false
            },
            "_ttl":{  
                "enabled":true,
                "default":"90d"
            },
            "dynamic_templates":[  
                {  
                    "str_default":{  
                        "match":"*_s",
                        "match_mapping_type":"string",
                        "mapping":{  
                            "type":"string",
                            "index":"analyzed"
                        }
                    }
                },
                {  
                    "str_na":{  
                        "match":"*",
                        "match_mapping_type":"string",
                        "mapping":{  
                            "type":"string",
                            "index":"not_analyzed"
                        }
                    }
                }
            ]
        },
        "order":{  
            "properties":{  
                "uid":{  
                    "type":"string",
                    "index":"not_analyzed"
                },
                "order_no":{  
                    "type":"string",
                    "index":"not_analyzed"
                },
                "seq":{  
                    "type":"string",
                    "index":"not_analyzed"
                },
                "order_date":{  
                    "type":"date",
                    "format":"yyyy-MM-dd HH:mm:ss || dateOptionalTime",
                    "numeric_resolution":"minutes"
                },
                "order_hour":{
                    "type":"integer"
                },
                "order_dayofweek":{
                    "type":"integer"
                },
                "gid":{  
                    "type":"string",
                    "index":"not_analyzed"
                },
                "goods_name":{  
                    "type":"string",
                    "index":"not_analyzed"
                },
                "sale_price":{
                    "type":"double"
                },
                "qty":{ 
                    "type":"integer"
                },
                "final_amt":{
                    "type":"double"
                },
                "order_sum":{
                    "type":"double"
                },
                "tags":{ 
                    "type":"string",
                    "index":"not_analyzed"
                },
                "age":{
                    "type":"double"
                },
                "gender":{
                    "type":"string",
                    "index":"not_analyzed"
                },
                "cnt_7d":{
                    "type":"integer"
                },
                "cnt_30d":{
                    "type":"integer"
                },
                "also_buy":{
                    "type":"string"
                },
                "also_view":{
                    "type":"string"
                },
                "img_url":{
                    "type":"string",
                    "index":"not_analyzed"
                }

            }
        }
    }
}
