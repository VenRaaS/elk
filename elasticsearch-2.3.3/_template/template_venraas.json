PUT http://$HOSTNAME:9200/_template/template_venraas/

{
    "template":"venraas",
    "mappings":{
        "_default_":{
            "_all":{
                "enabled":false
            },
            "dynamic_templates":[
                 {
                    "str_na":{
                        "match":"*",
                        "match_mapping_type":"string",
                        "mapping":{
                            "type":"string",
                            "index":"not_analyzed"
                        }
                    }
                },
                {
                    "str_ik":{
                        "match":"*_ik",
                        "match_mapping_type":"string",
                        "mapping":{
                            "type":"string",
                            "index":"analyzed",
                            "analyzer": "ik_max_word"
                        }
                    }
                },
                {
                    "str_default":{
					    "match":"*_s",
                        "match_mapping_type":"string",
                        "mapping":{
                            "type":"string",
                            "index":"analyzed"
                        }
                    }
                }
            ]
        },
        "com_pkgs":{

        }
    }
}
