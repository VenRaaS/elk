PUT _template/template_mod

{
    "template":"*_mod_*",
    "settings":{
        "index":{
            "number_of_shards":"3"
        }
    },
    "mappings":{
        "_default_":{
            "_all":{
                "enabled":false
            },
            "dynamic_templates":[
                {
                    "str_noindex":{
                        "match_pattern":"regex",
                        "match":"^(indicators)|(indicators_raw)$",
                        "mapping":{
                            "type":"keyword",
                            "index":false
                        }
                    }
                },
                {
                    "update_datetime":{
                        "match_pattern": "regex",
                        "match":"^(update_dt)|(update_time)$",
                        "mapping":{
                            "type":"date",
                            "format":"epoch_second || yyyy-MM-dd HH:mm:ss || yyyy-MM-dd'T'HH:mm:ss"
                        }
                    }
                },
                {
                    "str_ik":{
                        "match":"*_ik",
                        "mapping":{
                            "type":"text",
                            "analyzer":"ik_max_word",
                            "search_analyzer":"ik_max_word"
                        }
                    }
                },
                {
                    "str_text":{
                        "match":"*_t",
                        "mapping":{
                            "type":"text"
                        }
                    }
                },
                {
                    "str_default":{
                        "match_mapping_type":"string",
                        "mapping":{
                            "type":"keyword"                            
                        }
                    }
                }
            ]
        },
        "breadcrumb":{
            "properties":{
                "breadcrumb":{
                    "type":"keyword",
                    "index":false
                }
            }
        },
        "vig":{
            "properties":{
                "score":{
                    "type":"scaled_float",
                    "scaling_factor":100
                }
            }
        }
    }
}
