PUT _template/template_mod

{
    "template":"*_mod_*",
    "mappings":{
        "_default_":{
            "_all":{
                "enabled":false
            },
            "dynamic_templates":[
                {
                    "keyword_noindex":{
                        "match_pattern":"regex",
                        "match":"^(indicators)|(indicators_raw)|(breadcrumb)$",
                        "mapping":{
                            "type":"keyword",
                            "index":false
                        }
                    }
                },
                {
                    "update_dt":{
                        "match":"update_dt",
                        "mapping":{
                            "type":"date",
                            "format":"epoch_second || yyyy-MM-dd HH:mm:ss || yyyy-MM-dd'T'HH:mm:ss"
                        }
                    }
                },
                {
                    "str_ik":{
                        "match":"*_ik",
                        "mapping":{
                            "type":"text",
                            "analyzer":"ik_max_word",
                            "search_analyzer":"ik_max_word"
                        }
                    }
                },
                {
                    "str_default":{
                        "match":"*_s",
                        "mapping":{
                            "type":"text"
                        }
                    }
                },
                {
                    "str_keyword":{
                        "match":"*",
                        "mapping":{
                            "type":"keyword"
                        }
                    }
                }
            ]
        },
        "vig":{
            "properties":{
                "score":{
                    "type":"scaled_float",
                    "scaling_factor":100
                }
            }
        }
    }
}
